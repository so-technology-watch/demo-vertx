<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>oss-parent</artifactId>
    <groupId>org.sonatype.oss</groupId>
    <version>7</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>fr.sogeti</groupId>
  <artifactId>demo-vertx</artifactId>
  <name>Project - demo vertx</name>
  <version>1.0-SNAPSHOT</version>
  <url>http://maven.apache.org</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>fr.sogeti.demo.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>sonatype-nexus-snapshots</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
  </repositories>
  <properties>
    <maven.surefire.plugin.version>2.14</maven.surefire.plugin.version>
    <vertx.createFatJar>false</vertx.createFatJar>
    <maven.dependency.plugin.version>2.7</maven.dependency.plugin.version>
    <maven.resources.plugin.version>2.6</maven.resources.plugin.version>
    <maven.surefire.report.plugin.version>2.14</maven.surefire.report.plugin.version>
    <junit.version>4.11</junit.version>
    <vertx.testtools.version>2.0.3-final</vertx.testtools.version>
    <maven.clean.plugin.version>2.5</maven.clean.plugin.version>
    <maven.failsafe.plugin.version>2.14</maven.failsafe.plugin.version>
    <maven.vertx.plugin.version>2.0.12-final</maven.vertx.plugin.version>
    <vertx.version>2.1.6</vertx.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <mods.directory>target/mods</mods.directory>
    <maven.javadoc.plugin.version>2.9</maven.javadoc.plugin.version>
    <vertx.pullInDeps>false</vertx.pullInDeps>
    <maven.compiler.plugin.version>3.0</maven.compiler.plugin.version>
    <module.name>${project.groupId}~${project.artifactId}~${project.version}</module.name>
  </properties>
</project>

